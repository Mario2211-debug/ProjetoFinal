<%@queixas.each do |q|%>
<div class="post">
<div class="post-heading">
<div class="post-title">
  <%if q.assunto.nil?%>
   sem assunto
    <%else%>
    <h4> <%=q.assunto.nome%> </h4>
      <%end%>
  </div>
</div>
<div class="post-description">
<p> <%=link_to q.descricao, queixa_path(q)%></p>
<div class="post-state-details">
<%if q.situacao_id == 1%>
    <p class="badge badge-success">Resolvida</p><p class="badge">5 <span> hrs</span></p>
<%elsif q.situacao_id == 2%>
     <p class="badge badge-danger">Não Resolvida</p>
 <%else%>
     <p class="badge badge-danger">Não resolvida</p><p class="badge">5 <span> hrs</span></p>
<%end%>
    </div>
</div>
</div>
<br>
<%end%>
