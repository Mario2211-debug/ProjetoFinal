<%@empresa.each do |r|%>
<%if r.indiceS >= 50 %>
<div class="card-body p-0">
    <div class="media review-box">
      <%=image_tag r.displayed_image, width:"55", class:"mr-3 img-fluid btn-rounded", loading: "lazy", alt:r.nome%>
        <div class="media-body">
            <h4 class="mt-0 mb-0 text-black"><%=link_to r.nome, empresa_path(r)%></h4>
            <ul class="review-meta mb-3 d-block d-sm-flex align-items-center" id='total'>
                <li class="mr-3"><small><%=r.atividade.nome%></small></li>
                <li class="mr-3"><small><%=r.updated_at.strftime("%d %B %Y")%></small></li>

                <%if r.rank.between?(1, 2.9)%>
                <li class="ml-auto"><span class="badge badge-rounded badge-danger light font-w500">Péssima</span></li>
                <%end%>

                <%if r.rank.between?(3.0, 4.9)%>
                <li class="ml-auto"><span class="badge badge-rounded badge-danger light font-w500">Não recomendado</span></li>
                <%end%>

                <%if  r.rank.between?(5.0, 6.9)%>
                <li class="ml-auto"><span class="badge badge-rounded badge-success light font-w500">Regular</span></li>
                <%end%>

                <%if r.rank.between?(7.0, 8.9)%>
                <li class="ml-auto"><span class="badge badge-rounded badge-warning light font-w500">Bom</span></li>
                <%end%>

                <%if r.rank >= 9.0%>
                <li class="ml-auto"><span class="badge badge-rounded badge text-gold light font-w500">Excelente</span></li>
                <%end%>

            </ul>
            <p class="mb-3 text-secondary"><%=r.sobre%></p>
        </div>
        <div class="media-footer align-self-center">
            <div class="star-review text-md-center">
                <span class="text-secondary"><%=r.rank.round(1)%></span>
                <%if r.rank.between?(1, 2)%>
                <i class="fa fa-star text-primary"></i>
                <i class="fa fa-star text-gray"></i>
                <i class="fa fa-star text-gray"></i>
                <i class="fa fa-star text-gray"></i>
                <i class="fa fa-star text-gray"></i>
                <%end%>
                <%if r.rank.between?(3.0, 4.9)%>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gray"></i>
                <i class="fa fa-star text-gray"></i>
                <i class="fa fa-star text-gray"></i>
                <%end%>

                <%if  r.rank.between?(5.0, 6.9)%>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star-half-full text-gold"></i>
                <i class="fa fa-star text-gray"></i>
                <i class="fa fa-star text-gray"></i>
                <%end%>

                <%if r.rank.between?(7.0, 8.9)%>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gray"></i>
                <%end%>

                <%if r.rank >= 9.0%>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <i class="fa fa-star text-gold"></i>
                <%end%>
            </div>
        </div>
    </div>
</div>
<% end %>
<% end %>
