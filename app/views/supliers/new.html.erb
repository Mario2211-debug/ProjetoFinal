<%provide(:title, 'Cadastre a sua empresa')%>
<h1>Solicitar perfil</h1>


<div class="row">
<div class="col-md6-col-md-offset-3">
  <%= form_for (@perfil_empp) do |f|%>


  <p>
    <%= f.label :Selecione_a_empresa_que_pretende_representar %>     <br />
    <%= f.collection_select :empresa_id, Empresa.order(:id), :id, :nome, include_blank: true %> <br />
  </p>

  <%= f.submit "Fazer o pediido", class: "btn btn-primmary"%><br>
<% end %>
</div>
</div>
