<div class="container">
          <div class="row">
            <!-- BEGIN SEARCH RESULT -->
            <div class="col-md-12">
              <div class="grid search">
                <div class="grid-body">
                  <div class="row">
                    <!-- BEGIN FILTERS -->
                    <%= form_with model: @busca do |f| %>
                    <!-- BEGIN SEARCH INPUT -->
                    <div class="input-group">
                      <%= f.text_field :descricao, :placeholder => 'Digite alguma coisa', class:'form-control'%>
                      <span class="input-group-btn">
                        <%= f.submit "Procurar", class:'btn btn-primary' do %>
                        <i class="fa fa-search"></i>
                        <% end %>
                      </span>
                    </div>
                    <!-- END SEARCH INPUT -->
                    <div class="col-md-3">
                      <h2 class="grid-title"><i class="fa fa-filter"></i> Filtros</h2>
                      <hr>
                      <!-- BEGIN FILTER BY CATEGORY -->
                      <h4>Por Empresas:</h4>
                      <div class="checkbox">
                  <br>      <%= f.collection_check_boxes(:empresa, Empresa.where(situacao_id:6), :id, :nome, {:class => 'custom-control-label'}) %> <br>
                      </div>

                      <!-- END FILTER BY CATEGORY -->
                      <div class="padding"></div>
                      <h4>Por Assunto:</h4>
                      <div class="checkbox">
                              <%= f.collection_check_boxes(:empresa, Assunto.all, :id, :nome)%>

                      </div>
                      <% end %>

                      <!-- BEGIN FILTER BY DATE -->
                      <div class="padding"></div>

                    </div>
                    <!-- END FILTERS -->
                  </div>
                </div>
              </div>
            </div>
            <!-- BEGIN RESULT -->
            <div class="col-md-9">
              <h2><i class="fa fa-file-o"></i> Resultado</h2>
              <hr>

              <p>Resultados da pesquisa "<%=@busca.descricao %>"</p>
              <div class="padding"></div>
              <div class="row">
                <!-- BEGIN ORDER RESULT -->
                <div class="col-sm-6">
                  <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                      Order by <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Name</a></li>
                      <li><a href="#">Date</a></li>
                      <li><a href="#">View</a></li>
                      <li><a href="#">Rating</a></li>
                    </ul>
                  </div>
                </div>
                <!-- END ORDER RESULT -->

                <div class="col-md-6 text-right">
                  <div class="btn-group">
                    <button type="button" class="btn btn-default active"><i class="fa fa-list"></i></button>
                    <button type="button" class="btn btn-default"><i class="fa fa-th"></i></button>
                  </div>
                </div>
              </div>
            </div>
            <!-- END RESULT -->
          </div>
        </div>
