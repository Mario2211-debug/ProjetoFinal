<div class="container">
          <div class="row">
            <!-- BEGIN SEARCH RESULT -->
            <div class="col-md-12">
              <div class="grid search">
                <div class="grid-body">
                  <div class="row">

                    <div class="head_search">
                      <%= form_with model: @busca do |f| %>
                      <div class = "head_search_cont" aria-expanded = "false">
                              <%= f.text_field :descricao, :placeholder => 'Digite alguma coisa', class:'form-control'%>
                              <i class="s_icon uil-search-alt"></i>
                            </div>
                    </div>
                    <%= f.submit "Procurar" %>
                    <%end%>

                    <!-- BEGIN FILTERS -->
                            </div>
                    <!-- END SEARCH INPUT -->
                    <div class="col-md-3">
                      <h2 class="grid-title"><i class="fa fa-filter"></i> Filtros</h2>
                      <hr>

            <!-- BEGIN RESULT -->
            <div class="col-md-9">
              <h2><i class="fa fa-file-o"></i> Resultado</h2>
              <hr>

              <p>Resultados da pesquisa "<%=@busca.descricao %>"</p>
              <div class="padding"></div>
              <div class="row">
                <!-- BEGIN ORDER RESULT -->
                <div class="col-sm-6">
                  <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                      Order by <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Name</a></li>
                      <li><a href="#">Date</a></li>
                      <li><a href="#">View</a></li>
                      <li><a href="#">Rating</a></li>
                    </ul>
                  </div>
                </div>
                <!-- END ORDER RESULT -->

                <div class="col-md-6 text-right">
                  <div class="btn-group">
                    <button type="button" class="btn btn-default active"><i class="fa fa-list"></i></button>
                    <button type="button" class="btn btn-default"><i class="fa fa-th"></i></button>
                  </div>
                </div>
              </div>
            </div>
            <!-- END RESULT -->
          </div>
        </div>
