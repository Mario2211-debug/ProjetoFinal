<%provide(:title, 'Sign up')%>
<% @user.build_endereco %>
<% @user.build_contacto %>
<div class="main_content_inner">
    <div class="section-small">
      <div class="card">
        <div class="card-header">
<h4 class="card-title">Faça o  seu cadastro</h4>
        </div>
      <div class="card-body">
        <div class="basic-form">
          <div class="row ">
          <div class="col-xl-3 col-lg-5">
            <h4 class="card-title">Dados Pessoais</h4>
  <%= form_for(@user) do |f|%>
  <%= render 'shared/error_messages' %>
          <br>
          <div class="form-group col-md-6">
            <%= f.label :avatar%>
            <%= f.file_field :avatar, placeholder:'Faça o upload da imagem',class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
            </div>
  <div class="form-group">
    <%= f.label :nome, class:'uk-form-label'%>
    <%= f.text_field :nome, placeholder:'Digite o seu nome', class:'uk-input', style:'background-color: #def0f8;'%>
  </div>

  <div class="form-group">
<%= f.label :email,  class:'uk-form-label'%>
    <%= f.text_field :email, placeholder:'Digite o seu email',  class:'uk-input', style:'background-color: #def0f8;' %>
  </div>

  <div class="form-group"">
  <%= f.label :Numero_do_B_I, class:'uk-form-label'%>
  <%= f.text_field :B_I, placeholder:'Numero do bilhete de identidade',  class:'uk-input', style:'background-color: #def0f8;'%>
  </div>


  <div class="form-group">
  <%= f.label :palavra_passe, class:'uk-form-label'%>
    <%= f.text_field :password, placeholder:'Digite uma palavra-passe',  class:'uk-input', style:'background-color: #def0f8;'%>
  </div>

  <div class="form-group">
  <%= f.label :Confirmação_da_palavra_passe, class:'uk-form-label'%>
      <%= f.text_field :password_confirmation, placeholder:'Confirme a palavra-passe',  class:'uk-input', style:'background-color: #def0f8;'%>
    </div>
  </div>

  <div class="col-xl-3 col-lg-5">
    <h4 class="card-title">Endereço</h4>
    <%= f.fields_for :endereco do |form| %>
    <br>


  <div class="form-group">
  <%= form.label :Cidade_ou_Província,  class:'uk-form-label'%>
  <%= form.select(:cidade, Endereco.cidades.keys, {:prompt => "Cidade aonde reside atualmente"},  {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'})%>
  </div>

  <div class="form-group">
  <%= form.label :Destrito, class:'uk-form-label'%>
  <%= form.select(:destrito, Endereco.destritos.keys, {:prompt => "Destrito ou Municipio aonde reside atualmente"}, {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'})%>
  </div>

  <div class="form-group">
  <%= form.label :Bairro, class:'uk-form-label'%>
    <%= form.text_field :bairro, placeholder:'Bairro aonde reside atualmente',autofocus: true, autocomplete: "name", class:'uk-input', style:'background-color: #def0f8;'%>
  </div>

  <div class="form-group">
 <%= form.label :Rua, class:'uk-form-label'%>
    <%= form.text_field :rua, placeholder:'Rua aonde reside atualmente', autofocus: true, autocomplete: "name", class:'uk-input', style:'background-color: #def0f8;'%>
  </div>

  <div class="form-group">
  <%= form.label :Numero_da_casa, class:'uk-form-label'%>
    <%= form.text_field :numero, placeholder:'Número da casa aonde reside atualmente', autofocus: true, autocomplete: "name", class:'uk-input', style:'background-color: #def0f8;'%>
  </div>
      <% end %>
    </div>

      <div class="col-xl-3 col-lg-5">
        <h4 class="card-title">Contacto</h4>
      <%= f.fields_for :contacto do |form| %>
      <br>

      <div class="form-group">
          <%= form.label :Tipo_de_contacto, class:'uk-form-label'%>
          <%= form.select(:tipo, Contacto.tipos.keys, {:prompt => "Contacto disponível"}, {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'})%>
        </div>

        <div class="form-group">
        <%= form.label :Contacto, class:'uk-form-label'%>
          <%= form.text_field :valor, placeholder:'Numero ou endereco', class:'uk-input', style:'background-color: #def0f8;'%>
        </div>

        <% end %>
      </div>

</div>
<div class="text-right">
  <%=f.submit 'Cadastre-se', class:'btn badge-success'%>
</div>
</div>
</div>

</div>
<% end %>
</div>
</div>
