<%provide(:title, 'Editar')%>
<div class="main_content_inner">
  <div class="row">

  <div class="col-lg-4 col-lg-5">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">Dados do perfil</h4>
                      <div class="login-clean k">
                        <%= form_for(@user) do |f|%>
                        <%= render 'shared/error_messages' %>
<div class="form-row">


  <div class="form-group col-md-6">
                      <%= f.label :nome%>
                          <%= f.text_field :nome, placeholder:'Digite o seu nome',class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                        </div>


        <div class="form-group col-md-6">
                        <%= f.label :Numero_do_bilhete_de_identidade%>
                          <%= f.text_field :B_I, placeholder:'Numero do bilhete de identidade', class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                          </div>

          <div class="form-group col-md-6">
                          <%= f.label :email%>
                          <%= f.text_field :email, placeholder:'Digite o seu email', class:"border rounded border-white form-control", style:"background-color: #def0f8;" %>
                          </div>

<div class="form-group col-md-6">
                      <%= f.label :avatar%>
                          <%= f.file_field :avatar, placeholder:'Faça o upload da imagem',class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                        </div>


<div class="form-group col-md-6">
                          <%= f.label :palavra_passe%>
                          <%= f.text_field :password, placeholder:'Digite uma palavra-passe',class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                        </div>

<div class="form-group col-md-6">
                        <%= f.label :Confirmação_da_palavra_passe%>
                            <%= f.text_field :password_confirmation, placeholder:'Confirme a palavra-passe',class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                          </div>

</div>
</div>
</div>
</div>
</div>

<div class="col-xl-3 col-lg-5">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Endereco</h4>
                    <div class="login-clean k">
<div class="form-row">

                          <%= f.fields_for :endereco do |form| %>

                          <div class="form-group col-md-6">
                            <%= form.label :Cidade_ou_Província%>
                            <%= form.select(:cidade, Endereco.cidades.keys, {:prompt => "Escolhe"}, {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'})%>
                        </div>

                        <div class="form-group col-md-6">
                        <%= form.label :Destrito%>
                        <%= form.select(:destrito, Endereco.destritos.keys, {:prompt => "Escolhe"}, {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'})%>
                        </div>

                        <div class="form-group col-md-6">
                     <%= form.label :Bairro%>
                          <%= form.text_field :bairro, placeholder:'Bairro aonde reside atualmente',autofocus: true, autocomplete: "name", class:"border rounded border-white form-control", style:'background-color: #def0f8;' %>
                        </div>

                        <div class="form-group col-md-6">
                         <%= form.label :Rua%>
                          <%= form.text_field :rua, placeholder:'Rua aonde reside atualmente', autofocus: true, autocomplete: "name", class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                        </div>

                        <div class="form-group col-md-6">
                        <%= form.label :Numero_da_casa%>
                          <%= form.text_field :numero, placeholder:'Número da casa aonde reside atualmente', autofocus: true, autocomplete: "name", class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                        </div>

                            <% end %>
  </div>
</div>
</div>
</div>
</div>

<div class="col-xl-3 col-lg-5">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Contactos</h4>
                    <div class="login-clean k">
<div class="form-row">


                            <%= f.fields_for :contacto do |form| %>
                            <div class="form-group col-md-6">
                              <%= form.label :Tipo_de_contacto%>
                              <%= form.select(:tipo, Contacto.tipos.keys, {:prompt => "Escolhe"}, {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'})%>
                              </div>

                              <div class="form-group col-md-6">
                            <%= form.label :Contacto%>
                                <%= form.text_field :valor, placeholder:'Numero ou endereco', class:"border rounded border-white form-control", style:'background-color: #def0f8;'%>
                              </div>
</div>
                              <% end %>


                      </div>
                  </div>

                </div>
              </div>
              <div class="text-right">
              <%= f.submit "Salvar alterações", class:"btn btn-primary btn-block"%><br>
            </div>

            <% end %>
                </div>
            </div>
