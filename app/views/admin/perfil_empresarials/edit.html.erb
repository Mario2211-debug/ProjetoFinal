<%provide(:url, admin_perfil_empresarial_path(@perfil_empp))%>
<% @perfil_empp.build_empresa %>
<div class="content-wrapper">
<div class="row">
  <%= render 'user' %>
  <div class="col-lg-6 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">Selecione o estado</h4>
                      <%= form_for(@perfil_empp, url: admin_perfil_empresarial_path)   do  |f| %>
                      <div class="form-group">
                        <%= f.label :Situacão %>     <br />
                          <%= f.collection_select(:situacao_id, Situacao.where(escopo:'Solicitacção de perfil'), :id, :nome, {:prompt=> 'Selecione' }, {:class=>'form-control form-control-md'} ) %>
                      </div>

                      <div class="form-group">
                        <%= f.label :observacao %>     <br />
                        <%= f.text_area :observacao, class: 'form-control' %>
                      </div>

                      <%= f.fields_for :empresa do |form| %>
                      <div class="form-group">
                      <%= form.label :nif%><br />
                      <%= form.text_field :nif, autofocus: true, placeholder: "Por favor informe o NIF", class:'form-control form-control-sm' %>
                    </div>
                    <% end %>

            <%= f.submit "Salvar mudanças", class: "btn btn-success btn-fw" %>
        <%= link_to 'Voltar',  admin_solicitacoes_path, class: "btn btn-danger btn-fw", method: :post%>
              <% end %>
                      </div>

                  </div>

                </div>
              </div>
            </div>
