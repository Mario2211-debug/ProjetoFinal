<div class="content-wrapper">
  <div class="row ">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Empresas em análise</h4>
            <div class="table-responsive">
            <table class="table table-dark">
              <thead>
                <tr>
                 <th> Nome da empresa </th>
                 <th> Responsável </th>
                  <th> Ramo de atividade </th>
                  <th> Data de criação </th>
                </tr>
              </thead>
              <tbody>
                <%@inativas.each do |empresa|%>
                <tr>
                  <td>
                    <span class="pl-2"><%= empresa.nome%></span>
                  </td>
                  <td> <%= empresa.responsavel%>  </td>
                  <td> <%= empresa.atividade.nome%> </td>
									<td> <%= empresa.created_at.strftime("%d %B %Y")%>  </td>

											<td>
								<%=link_to 'Mostrar', action: 'show', id: empresa%>
									</td>

				<td>
							<%=link_to 'Editar', action: 'edit', id: empresa%>
					</td>

						<td>
					<%=link_to 'Apagar', {action: 'destroy', id: empresa}, {method: "delete"} %>
					</td>

                  </tr>
                <%end%>
              </tbody>
            </table>
            <br>
            <%=will_paginate @inativas%>

          </div>
        </div>
      </div>
    </div>

  </div>

</div>
