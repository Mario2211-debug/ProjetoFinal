<div class="content-wrapper">

          <div class="row">
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%=@analise.count%></h3>
                        <%=link_to '<p class="text-warning ml-2 mb-0 font-weight-medium">Ver</p>'.html_safe, analise_admin_empresa_path(current_admin, @analise)%></p>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-warning">
                        <span class="mdi mdi-alarm-multiple icon-item "></span>
                      </div>
                    </div>
                  </div>
                  <h6 class="text-muted font-weight-normal">Empresas em análise</h6>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%=@ativas.count%></h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium">+11%</p>
                      </div>
                    </div>
                    <div class="col-3">

                      <div class="icon icon-box-success">
                        <span class="mdi mdi-check icon-item"></span>
                      </div>
                    </div>
                  </div>
                  <h6 class="text-muted font-weight-normal">Total de empresas ativas</h6>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%=@inativas.count%></h3>
                    <%=link_to '<p class="text-danger ml-2 mb-0 font-weight-medium">Ver</p>'.html_safe, recusadas_admin_empresa_path(current_admin, @analise)%></p>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-danger">
                        <span class="mdi mdi-close-octagon-outline icon-item"></span>
                      </div>
                    </div>
                  </div>
                  <h6 class="text-muted font-weight-normal">Empresas inativas</h6>
                </div>
              </div>
            </div>
          </div>

  <div class="row ">
    <div class="col-lg-9 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Empresas</h4>
          <a class=" card-title badge badge-success"  href="<%=new_admin_empresa_path(current_admin.id)%>"> Nova empresa</a>
          <div class="table-responsive">
            <table class="table table-dark">
              <thead>
                <tr>
                 <th> Nome da empresa </th>
                 <th> Responsável </th>
                  <th> Ramo de atividade </th>
                  <th> Data de criação </th>
                  <th> Estado </th>
                </tr>
              </thead>
              <tbody>
                <%@empresas.each do |empresa|%>
                <tr>
                  <td>
                    <span class="pl-2"><%=link_to  empresa.nome, action: 'show', id: empresa%></span>
                  </td>
                  <td> <%= empresa.responsavel%>  </td>
                  <td> <%= empresa.atividade.nome%> </td>
									<td> <%= empresa.created_at.strftime("%d %B %Y")%>  </td>
									<td><%if (empresa.situacao_id  == 6)%>
										<label class="badge badge-success">
											Aprovada
										</label>
										<%elsif (empresa.situacao_id == 8)%>
										<label class="badge badge-warning">
											Em analise
										</label>
										<%else%>
										<label class="badge badge-danger">
											Rejeitada
										</label>
										<%end%>
									</td>
	                  </tr>
                <%end%>
              </tbody>
            </table>
            <br>
            <%=will_paginate @empresas%>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
