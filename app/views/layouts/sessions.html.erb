<!DOCTYPE html>
<html>
  <head>
    <title>ReclameAi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <%= stylesheet_link_tag    'consumidor/consumidor', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= stimulus_include_tags %>
     <%= javascript_include_tag 'consumidor/consumidor', 'data-turbolinks-track': 'reload' %>
     <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  </head>
  <body style="background-color: #212529;" class="d-flex flex-column" style="height:100%;">
    <div id="wrapper">
      <div class="main_content">
              <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, id: "flash_#{name}" %>
              <% end %>

              <%= yield %>
            </div>
          </div>

          <%= render 'layouts/footer' %>
  </body>
</html>
<%= debug(params) if Rails.env.development? %>
