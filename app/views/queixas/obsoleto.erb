
                              <div class="grid-margin stretch-card" id="<%=dom_id queixa%>">
                                <div class="card">
                                <div class="card-body">
                      <h4 class="card-title"><%= queixa.assunto %></h4>
              <p class="card-description">
                        <p style="margin-left: 7px;">
                          <%=link_to queixa.descricao, queixa.empresa, style:'color: black;'%> </p>
              <%if queixa.updated_at<24.hours.ago && queixa.replica.nil?%>
              <label class="mr-2 badge badge-danger">
