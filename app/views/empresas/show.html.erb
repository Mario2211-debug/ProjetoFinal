                                          </div>

                                          <div class="single-group-details">
                                            <div class="text-center">
                                                  <div class="single-group-image">
                                                      <a href="#">
                                                          <img src="" alt="">
                                                      </a>
                                                  </div>
                                                  <div class="single-group-details-info">
                                                      <h3> <%=@empresa.nome%> </h3>
                                                      <p>
                                                      </p><p><%=@empresa.atividade.nome%> </p>
                                                      <p></p>
                                                      </div>
                                              </div>
                                              <div class="right-side">
                                                  <div class="btn-subscribe">
                                                    <%= button_to 'Votar', votar_empresa_path(@empresa), method: :post, class:'btn btn-primary light sharp' %>
                                                  </div>
                                              </div>
                                          </div>

                                          <div class="nav-single-group uk-sticky" uk-sticky="media : @s" style="">
                                              <nav class="responsive-tab">
                                                  <ul>
                                                    <div class="text-center">
                                                      <li style="color:black"><%=link_to '<i class="flaticon-381-home-2 "></i>Pagina inicial'.html_safe, empresas_path(@empresa)%></li>
                                                      <li style="color:black"><%=link_to '<i class="flaticon-381-speaker"></i>Reclamações'.html_safe, empresas_path(@empresa)%></li>
                                                      <li style="color:black"><%=link_to '<i class="flaticon-381-success"></i>Principais problemas'.html_safe, empresas_path(@empresa)%></li>
                                                      <li style="color:black"><%=link_to '<i class="flaticon-381-help-1""></i>Sobre'.html_safe, empresas_path(@empresa)%></li>
