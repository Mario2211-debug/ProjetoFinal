<%provide(:url, consumidor_queixas_path(@queixa))%>

    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
    <div class="card-body">
      <p class="card-title">Avaliar reclamação</p>
      <h5 style="margin-bottom:0px; margin-top:20px;">Descrição</h5>
      <%= @queixa.descricao%>
      <h5 style="margin-bottom:0px; margin-top:20px;">Réplica do vendedor</h5>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= @queixa.replica%>
      </div>
      <h5 style="margin-bottom:0px; margin-top:20px;">Faça a sua avaliação</h5>

       <div class="form-group">
<%= form_for(@queixa, url: consumidor_queixa_path)  do  |f| %>
<div class="dropdown custom-dropdown">
<%= f.collection_select(:situacao_id, Situacao.where(escopo:"Queixa"), :id, :nome, {:prompt=> 'Selecione' }, {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'}) %>
</div>
<div class="dropdown custom-dropdown">
<%= f.collection_select(:sentimento_id, Sentimento.order(:id), :id, :nome, {:prompt=> 'Selecione' }, {:class=>'uk-select fa fa-search', :style => 'background-color: #def0f8;'}) %>
</div>
    <%= f.text_area :mensagem, autofocus: true, class:"form-control", rows:"4", id:"comment"%>
      </div>

      <div class="card-footer d-sm-flex justify-content-between align-items-center">
      <div class="card-footer-link mb-4 mb-sm-0">
      <p class="card-text text-dark d-inline">Ultima atualizaçãos <%=@queixa.updated_at%> atrás</p>
      </div>
      <%= f.submit "Salvar mudanças", class: "btn btn-success btn-fw" %>
                            </div>
    <% end %>

    </div>
</div>
</div>
