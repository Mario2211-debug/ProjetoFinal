<% if current_user.perfil_empresarial.situacao_id != 3%>
<% if current_user.perfil_empresarial.situacao_id == 4%>
  <div class="row">
  <div class="col-12">
  <div class="card alert alert-error">
  <div class="card-body alert alert-error">
      <div class="right-box-padding">
      <div class="read-content alert alert-error">
        <h5 class="my-1 text-primary"><h3>Acompanhar Solicitação de Perfil Empresa</h3> </h5>
      <hr>
      <div class="media mb-2 mt-3">
      <div class="media-body"><span class="pull-right"><%='Horada criação da Mensagem'%></span>
        <h5 class="my-1"><h3 class="text-danger">Solicitação negada</h3> <br /></h5>
      <p class="read-content-email">
      Para mim , <%=current_user.email%></p>
      </div>
      </div>
      <div class="read-content-body">
      <h5 class="mb-4">Olá, <%=current_user.nome%></h5>
      <p class="mb-2"><strong><%=current_user.nome%>, </strong><%=current_user.perfil_empresarial.observacao%></p>
      <h5 class="pt-3">Atenciosamente</h5>
      <p>Mr <%='Nome do administrador'%></p>
      <hr>
      </div>
      </div>
      </div>
      <div class="text-right">
        <%= link_to 'Solicitar Novamente o Perfil de Empresa', new_consumidor_perfil_empresarial_path(current_user.id),  class:'btn btn-primary'%>
        </div>

  </div>

  </div>
  </div>
</div>
  <% else %>
    <div class="row">
    <div class="col-12">
    <div class="card alert alert-error">
    <div class="card-body alert alert-error">
        <div class="right-box-padding">
        <div class="read-content alert alert-error">
          <h5 class="my-1 text-primary"><h3>Acompanhar Solicitação de Perfil Empresa</h3> <br /></h5>
        <hr>
        <div class="media mb-2 mt-3">
        <div class="media-body"><span class="pull-right"><%='Horada criação da Mensagem'%></span>
          <h5 class="my-1"><h3 class="text-gold">Desculpe!</h3> <br /></h5>
        <p class="read-content-email">
        Para mim , <%=current_user.email%></p>
        </div>
        </div>
        <div class="read-content-body">
        <h5 class="mb-4">Olá, <%=current_user.nome%></h5>
        <p class="mb-2"><strong><%=current_user.nome%>, </strong>Sua Solicitação ainda não foi analisada. Entraremos em contato em breve...
</p>
        <h5 class="pt-3">Atenciosamente</h5>
        <p>Mr <%='Nome do administrador'%></p>
        <hr>
        </div>
        </div>
        </div>
    </div>

    </div>
    </div>
  </div>

  <% end %>
<% else %>
  <div class="alert alert-success">
    <strong>Solicitação Realizada com Sucesso!</strong> <br />
  </div>
  <div class="row">
  <div class="col-12">
  <div class="card alert alert-error">
  <div class="card-body alert alert-error">
      <div class="right-box-padding">
      <div class="read-content alert alert-error">
        <h5 class="my-1 text-primary"><h3>Acompanhar Solicitação de Perfil Empresa</h3> <br /></h5>
      <hr>
      <div class="media mb-2 mt-3">
      <div class="media-body"><span class="pull-right"><%='Horada criação da Mensagem'%></span>
        <h5 class="my-1"><h3 class="text-wanning">Solicitação Realizada com Sucesso!</h3> <br /></h5>
      <p class="read-content-email">
      Para mim , <%=current_user.email%></p>
      </div>
      </div>
      <div class="read-content-body">
      <h5 class="mb-4">Olá, <%=current_user.nome%></h5>
      <p class="mb-2"><strong><%=current_user.nome%>, </strong><%=current_user.perfil_empresarial.observacao%></p>
      <h5 class="pt-3">Atenciosamente</h5>
      <p>Mr <%='Nome do administrador'%></p>
      <hr>
      </div>
      </div>
      </div>
  </div>

  </div>
  </div>
</div>
<% end %>
