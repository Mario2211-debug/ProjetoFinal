<%provide(:url, fornecedor_queixas_path(@queixa))%>
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
    <div class="card-body">
      <p class="card-title">Responder</p>
      <h5 style="margin-bottom:0px; margin-top:20px;">Descrição</h5>
      <%= @queixa.descricao%>

      <%if @queixa.replica.nil?%>
      <% else %>
      <h5 style="margin-bottom:0px; margin-top:20px;">Réplica do vendedor</h5>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= @queixa.replica%>
      </div>
      <% end %>
      <h5 style="margin-bottom:0px; margin-top:20px;">Responda a essa reclamação</h5>

       <div class="form-group">
<%= form_for(@queixa, url: fornecedor_queixa_path)  do  |f| %>
    <%= f.text_area :replica, autofocus: true, class:"form-control", rows:"4", id:"comment"%>
      </div>

      <div class="card-footer d-sm-flex justify-content-between align-items-center">
      <div class="card-footer-link mb-4 mb-sm-0">
      <p class="card-text text-dark d-inline">criado em <%=@queixa.updated_at%> atrás</p>
      </div>
      <%= f.submit "Salvar mudanças", class: "btn btn-success btn-fw" %>
                            </div>
    <% end %>

    </div>
</div>
</div>
