<div class="main_content_inner">
  <div class="section-small">
    <div uk-grid="" class="uk-grid">
      <div class="uk-width-2-3@m fead-area uk-first-column">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header border-0 pb-0 d-sm-flex d-block">
              <div class="card-action card-tabs mt-3 mt-sm-0">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#recentes" role="tab">
                      Recentes
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#monthly" role="tab">
                      Resolvidas
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#weekly" role="tab">
                      Não Resolvidas
                    </a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="card-body tab-content">
              <div class="tab-pane fade show active" id="recentes">
                <%= render 'recentes' %>
              </div>
              <div class="tab-pane fade" id="monthly">
                <%= render 'resolvidas' %>
              </div>
              <div class="tab-pane fade" id="weekly">
                <%= render 'nao_resolvidas' %>
              </div>
            </div>
          </div>
        </div>

        <div class="grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Gráfico Anual</h4>
              <%= column_chart @total.group_by_year(:created_at).count %>
            </div>
          </div>
        </div>
      </div>

      <!-- sidebar -->
      <div class="uk-width-expand ml-lg-2">
        <div class="col-lg-4 col-lg-12 col-sm-12">
          <div class="card overflow-hidden">
            <div class="text-center p-3 overlay-box" style="background-image: url();">
              <div class="profile-photo">
                <%= image_tag @empresa.displayed_image, width: "100", class: "img-fluid rounded-circle", loading: "lazy", alt: current_user.nome, class: "rounded-circle", width: "150" %>
              </div>
              <h3 class="mt-3 mb-1 text-white"><%= @empresa.nome %></h3>
              <p class="text-white mb-0">Empresa</p>
            </div>
            <div class="card-header border-0 pb-0">
              <h2 class="card-title">Sobre a empresa</h2>
              <div class="text-right">
                <%=@empresa.sobre%>
              </div>
              <br>
              <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                  <span class="mb-0">E-mail</span>
                  <strong class="text-muted"><%= @empresa.email %></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span class="mb-0">Endereço</span>
                  <strong class="text-muted"><%=@empresa.endereco.cidade%></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span class="mb-0">Contactos</span>
                  <strong class="text-muted"><%=@empresa.contacto.valor%></strong>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span class="mb-0">Destrito</span>
                  <strong class="text-muted"><%=@empresa.endereco.destrito%></strong>
                </li>
              </ul>
              <div class="card-footer border-0 mb-1 text-primary">
                <div class="col-12 pt-3 pb-3">
                  <h3 class="mb-1 text-primary">
                    <%= link_to "Editar", edit_fornecedor_empresa_path(current_user, current_user.empresa_id), class:"button primary" %>
                  </h3>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="grid-margin">
          <div class="card">
            <div class="card-body">
              <h2>Resolvidas</h2>
              <div class="row">
                <div class="col-8 col-sm-12 col-xl-8 my-auto">
                  <div class="d-flex d-sm-block d-md-flex align-items-center">
                    <h4 class="mb-0"><%=@resolvidas.count%></h4>
                    <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                  </div>
                  <h6 class="text-muted font-weight-normal">11.38% Desde o último mês</h6>
                </div>
                <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                  <i class="icon-lg mdi mdi-store text-success ml-auto"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="grid-margin">
          <div class="card">
            <div class="card-body">
              <h2>Não resolvidas</h2>
              <div class="row">
                <div class="col-8 col-sm-12 col-xl-8 my-auto">
                  <div class="d-flex d-sm-block d-md-flex align-items-center">
                    <h4 class="mb-0"><%=@nao_resolvidas.count%></h4>
                    <p class="text-success ml-2 mb-0 font-weight-medium">+8.3%</p>
                  </div>
                  <h6 class="text-muted font-weight-normal"><%=number_to_percentage(@empresa.indiceNR)%> Desde o último mês</h6>
                </div>
                <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                  <i class="icon-lg mdi mdi-account text-primary ml-auto"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="grid-margin">
          <div class="card">
            <div class="card-body">
              <h2>Total</h2>
              <div class="row">
                <div class="col-8 col-sm-12 col-xl-8 my-auto">
                  <div class="d-flex d-sm-block d-md-flex align-items-center">
                    <h4 class="mb-0"><%=@total.count%></h4>
                    <p class="text-danger ml-2 mb-0 font-weight-medium">-2.1% </p>
                  </div>
                  <h6 class="text-muted font-weight-normal">2.27% Desde o último mês</h6>
                </div>
                <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                  <i class="icon-lg mdi mdi mdi-comment-remove-outline text-danger ml-auto"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
