<div class="col-xl-12">
                <div class="card">
                  <div class="card-header border-0 pb-0 d-sm-flex d-block">
                  </div>
                  <div class="card-body tab-content">
                          <div class="table-responsive">
                            <table class="table">
                              <thead>
                                <tr>
                                  <th>Usuario</th>
                                  <th>Assunto</th>
                                  <th>Data</th>
                                  <th>Status</th>
                                  <th>Responder</th>
                                </tr>
                              </thead>
                              <tbody>
                                  <%@queixas.each do |q|%>
                                <tr>
                                  <td><%= q.user.nome%></td>
